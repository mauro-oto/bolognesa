<% if @pomodoris %>
  <section class="pomodoro-list-container">
		<h1>All pomodoris:</h1>
  	<ul>
		<% @pomodoris.each do |pomodoro| %>
      <% if pomodoro.finished_at %>
  			<li><strong>Pomodoro #<%= pomodoro.id %></strong> - Finished on <%= pomodoro.finished_at.strftime("%B %d at %I:%M %p") %> - <%= link_to '<i class="fa fa-edit"></i> Edit tags'.html_safe, edit_user_pomodori_path(pomodoro), :remote => true, :class => "edit_tags button small" %> </li>
      <% end %>
		<% end %>
  	</ul>
  </section>
<% end %>
