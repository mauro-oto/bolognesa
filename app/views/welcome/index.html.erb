<% if current_user %>

	<button class="button huge primary start-button">Start</button>

  <% if @pomodoris %>
	  <section class="pomodoro-list-container">
			<h1>Today:</h1>
	  	<ul>
			<% @pomodoris.each do |pomodoro| %>
				<% if pomodoro.finished_at %>
					<li><strong>Pomodoro #<%= pomodoro.id %></strong> - <%= pomodoro.finished_at.strftime("%I:%M %p") %> - <strong>Tags:</strong> <%= pomodoro.tags.map(&:name).join ', ' %> <%= link_to '<i class="fa fa-edit"></i> Edit tags'.html_safe, edit_user_pomodori_path(current_user.id, pomodoro.id), :remote => true, :class => "edit_tags button small" %> </li>
				<% end %>
			<% end %>
	  	</ul>
	  </section>
	<% end %>

	<progress value="0" max="100" class="timer-progress" id="timer-progress">0%</progress>
	<div class="visible-progress-value">25:00</div>

	<audio id="audio-ding">
	  <source src="/assets/ding.mp3" type="audio/mpeg">
	</audio>

	<div id="modal-container"></div>
	<div id="modal">
	<a href="#" class="close">close</a>
	</div>

<% else %>
			<section class="dialog login">
				<header>
					<h1>Login</h1>
				</header>
				<div class="dialog-content">
  				<%= link_to '<i class="fa fa-github-alt"></i> Sign in with Github'.html_safe, '/auth/github', :class =>"button inverse" %>
				</div>
			</section>
<% end %>
